<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewRoleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDeleteCurrentRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDeleteCurrentRole"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonSaveRoleChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSaveRoleChanges"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <Switch
        android:id="@+id/switchCanModifyInstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanModifyInstitution" />

    <Switch
        android:id="@+id/switchCanDeleteInstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanDeleteInstitution" />

    <Switch
        android:id="@+id/switchCanAddMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanAddMembers" />

    <Switch
        android:id="@+id/switchCanRemoveMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanRemoveMembers" />

    <Switch
        android:id="@+id/switchCanUploadMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanUploadMembers" />

    <Switch
        android:id="@+id/switchCanPreviewUploadedDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanPreviewUploadedDocuments" />

    <Switch
        android:id="@+id/switchCanRemoveUploadedDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanRemoveUploadedDocuments" />

    <Switch
        android:id="@+id/switchCanSendDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanSendDocuments" />

    <Switch
        android:id="@+id/switchCanPreviewReceivedDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/switchCanPreviewDocuments" />

    <Switch
        android:id="@+id/switchCanPreviewSpecificReceivedDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanPreviewSpecificReceivedDocument" />

    <Switch
        android:id="@+id/switchCanRemoveReceivedDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanRemoveReceivedDocument" />

    <Switch
        android:id="@+id/switchCanDownloadDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanDownloadDocuments" />

    <Switch
        android:id="@+id/switchCanAddRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanAddRoles" />

    <Switch
        android:id="@+id/switchCanRemoveRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanRemoveRoles" />

    <Switch
        android:id="@+id/switchCanModifyRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanModifyRoles" />

    <Switch
        android:id="@+id/switchCanAssignRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanAssignRoles" />

    <Switch
        android:id="@+id/switchCanDeassignRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/switchCanDeassignRoles" />
</LinearLayout>