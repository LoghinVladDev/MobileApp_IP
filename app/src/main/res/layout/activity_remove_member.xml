<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Red"
    tools:context=".ui.institutions.RemoveMemberActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:background="@color/Black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="Choose the member you want to remove:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:gravity="center_horizontal" />

        <Spinner
            android:id="@+id/spinnerSelectMemberToRemove"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@color/White"
            android:gravity="center" />


        <Button
            android:id="@+id/btnConfirmRemoveSelectedMember"
            android:layout_width="297dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/ic_button_background_red"
            android:text="Remove member"
            android:textColor="@color/White"
            android:textSize="17sp" />


    </LinearLayout>

</FrameLayout>